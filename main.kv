# !kivy
<MenuPrincipal>:
    FloatLayout:
        Image:
            source: 'fotos\BOARD.png'
        Button:
            text: "SinglePlayer"
            background_color: 0, 1, 1, 1
            font_size: 40
            pos_hint: {'x':.1, 'center_y':.5 } 
            size_hint:0.4,0.1
            on_press:
                root.manager.current = 'MenuSinglePlayer'
        
        Button:
            text: "MultiPlayer"
            background_color: 0, 1, 1, 1
            font_size: 40
            pos_hint: {'x':.5, 'center_y':.5 } 
            size_hint:0.4,0.1
            disabled:True
        
<MenuSinglePlayer>:
    FloatLayout:
        Button:
            id: new_player_btn
            text: "Cria Jogador"
            background_color: 0, 1, 1, 1
            font_size: 40   
            pos_hint: {'center_x':.5, 'top':1 } 
            size_hint:0.4,0.1
            disabled: False
            on_press:
                app.new_player(nome_player.text)
        
        TextInput:
            id:nome_player
            multiline:False
            hint_text: "Nome"
            pos_hint: {'center_x':.5, 'center_y':0.8 } 
            size_hint:0.3,0.1
            disabled:False
            opacity:1



        Button:
            text: "Volta"
            background_color: 0, 1, 1, 1
            font_size: 40
            pos_hint: {'center_x':.5, 'botton':1 }  
            size_hint:0.4,0.1 
            on_press:
                app.reseta()
                root.manager.current = 'MenuPrincipal'
        
        Button:
            id:jogar_btn
            text: "Jogar"
            background_color: 0, 1, 1, 1
            font_size: 40
            pos_hint: {'center_x':.5, 'center_y':0.2 }  
            size_hint:0.4,0.1
            disabled:True
            opacity:0
            on_press:
                app.inicia_jogo()
                root.manager.current = 'JogoTelaPrincipal'

        Label:
            id: ultimo_jogador_criado
            font_size: 40
            pos_hint: {'center_x':.5, 'center_y':.4 }
            

        Label:
            id: quantidade_jogadores
            font_size: 40
            pos_hint: {'center_x':.5, 'center_y':.6 }            

<JogoTelaPrincipal>:
    FloatLayout:
        Image:
            source: 'fotos\BOARD.png'
        Label:
            id: info_player
            font_size: 20
            # pos:-300,250
            pos_hint: {'x':0.105, 'top':0.95 }
            size_hint:0.1,0.1
        
        Button:
            id: Dado
            background_normal:'fotos\dado.png'
            #pos_hint: {'right':1, 'center_y':0.5 }  
            pos_hint: {'center_x':0.5, 'center_y':0.5 }  
            size_hint:0.25,0.25
            disabled:True
            opacity:0
            on_press:
                app.jogador_jogando()

        Button:
            id: Turno
            text: "Inicia Turno"
            background_color: 0, 1, 1, 1
            font_size: 40   
            pos_hint: {'center_x':.5, 'top':1 } 
            size_hint:0.4,0.1
            disabled: False
            on_press:
                app.inicia_round()
                Turno.text = "Proximo Turno"

<Popups_costa>:
    Label:
        id: carta_costa
        color: 0,0,0,1
        size_hint: 0.6, 0.2
        pos_hint: {"x":0.2, "top":0.9}

    Button:
        text: "Virar Carta"
        size_hint: 0.6, 0.1
        pos_hint: {"center_x":0.5, "center_y":0.3}
        on_press:
            app.jogador_jogando(True)
  
<Popups_frente>:
    Label:
        id: tipo_carta
        color: 0,0,0,1
        size_hint: 0.6, 0.2
        pos_hint: {"x":0.2, "top":0.9}

    Label:
        id: regra_carta
        color: 0,0,0,1
        font_size: 14
        size_hint: 0.6, 0.2
        pos_hint: {"x":0.2, "center_y":0.5}

    Button:
        text: "Avan√ßar"
        size_hint: 0.4, 0.1
        pos_hint: {"center_x":0.5, "center_y":0.3}
        on_press:
            app.jogador_jogando(True,True)
            
<JogoTelaMinigame>:
    FloatLayout:        
        Label:
            id: pergunta
            text: "TELA MINIGAMEZ"
            size_hint: 0.6, 0.2
            pos_hint: {"x":0.2, "top":0.9} 
        

        
        Button:
            id: r1
            text: "R1"
            background_color: 0, 1, 1, 1
            font_size: 15
            pos_hint: {'center_y':.5, 'left':1 }  
            size_hint:0.5,0.2 
            on_press:
                app.resposta_minigame(1,True,False)
                
        
        Button:
            id: r2
            text: "R2"
            background_color: 0, 1, 1, 1
            font_size: 15
            pos_hint: {'center_y':.5, 'right':1 }  
            size_hint:0.5,0.2 
            on_press:
                app.resposta_minigame(2,True,True)
        
        Button:
            id: r3
            text: "R3"
            background_color: 0, 1, 1, 1
            font_size: 15
            pos_hint: {'center_y':.3, 'left':1 }  
            size_hint:0.5,0.2 
            on_press:
                app.resposta_minigame(3,True,True)
        
        Button:
            id: r4
            text: "R4"
            background_color: 0, 1, 1, 1
            font_size: 15
            pos_hint: {'center_y':.3, 'right':1 }  
            size_hint:0.5,0.2 
            on_press:
                app.resposta_minigame(4)

<JogoFinal>
    FloatLayout:        
        Label:
            id: fim
            text: "FIM"
            size_hint: 0.6, 0.2
            pos_hint: {"center_x":0.5, "center_y":0.5} 
        Button:
            id: btnExit
            text: "FIM"
            pos_hint: {"center_x":0.5, "botton":1}
            size_hint: 0.4, 0.1
            on_press: app.stop() 